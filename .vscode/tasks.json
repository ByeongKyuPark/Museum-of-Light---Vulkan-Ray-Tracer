{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "${workspaceFolder}/build_windows.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\): (error|warning|note): (.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "-Path",
                "${workspaceFolder}/build/windows",
                "-Recurse",
                "-Force",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean and Rebuild",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Build",
                "Build Windows"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run RayTracer - Default Scene",
            "type": "shell",
            "command": "${workspaceFolder}/build/windows/bin/RayTracer.exe",
            "args": ["--scene", "1"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build Windows"
        },
        {
            "label": "Run RayTracer - Modern Art Gallery",
            "type": "shell",
            "command": "${workspaceFolder}/build/windows/bin/RayTracer.exe",
            "args": ["--scene", "6"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build Windows"
        },
        {
            "label": "Install Dependencies (vcpkg)",
            "type": "shell",
            "command": "${workspaceFolder}/vcpkg_windows.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
